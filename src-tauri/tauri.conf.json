{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Onyx ERP",
  "version": "1.0.2",
  "identifier": "br.com.finderbit.onyx-erp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "maximized": true,
        "title": "Onyx ERP - FinderBit",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/mrmateussiilva/onyx-erp/main/updater/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcyNTFERTEzMzdGOTlDNEIKUldSTG5QazNFOTVSY3U0QnRmQnJoMEl6dnBNdGxwazN3MU5QSisvbmJDZWxQdGlTNFJmQjEzdnQK"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "© 2025 FinderBit. Todos os direitos reservados.",
    "category": "Business",
    "shortDescription": "Onyx ERP by FinderBit",
    "longDescription": "Onyx ERP da FinderBit. Gestão completa de pedidos, estoque e relatórios.",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "nsis": {
        "languages": [
          "PortugueseBrazilian"
        ],
        "installMode": "both",
        "installerIcon": "assets/installer_icon.ico",
        "headerImage": "assets/nsis_header.bmp",
        "sidebarImage": "assets/nsis_sidebar.bmp"
      },
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}